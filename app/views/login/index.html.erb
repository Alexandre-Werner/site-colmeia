<div class="bg-gray-100 max-w-md w-full rounded shadow p-10">
  <%= image_tag "Colmeia.png", class: "h-12 mx-auto" %>
  <form class="mt-10">
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="email">
        Email
      </label>
      <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="email" type="text" placeholder="Email">
    </div>
    <div class="mb-6">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="password">
        Senha
      </label>
      <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="password" type="password" placeholder="********">
    </div>
    <div class="flex items-center justify-between">
      <div class="flex flex-col">
        <a class="inline-block align-baseline font-bold text-sm text-gray-700 hover:text-gray-800" href="#">
          Esqueceu sua senha?
        </a>
        <%= link_to 'Ir à página de registro ->', register_path, class: 'inline-block align-baseline font-bold text-sm text-gray-700 hover:text-gray-800' %>
      </div>
      <button class="bg-yellow-400 hover:bg-yellow-500 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="button">
        Login
      </button>
    </div>
  </form>
</div>